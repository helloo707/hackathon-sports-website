    white-space: nowrap;
    margin-bottom: 20px;
    font-weight: 800;

}
.over p{
    color: black;
    font-size: 18px;
}
.card:hover .over{
    opacity: 1;
}

#cursor{
    height: 20px;
    width: 20px;
    background-color: #95C11E;
    border-radius: 50%;
    position: fixed;
    z-index: 99;
}

#nav{
    height: 145px;
    width: 100%;
    display: flex;
    padding: 0 150px;
    gap: 50px;
    position:fixed;
    justify-content: flex-start;
    z-index: 99;
    background-color: rgba(0, 0, 0, 0.37);
}
#nav img{
    height: 75px;
}

#nav h4{
    text-transform: uppercase;
    font-weight: 500;
}

#footer{
    height: 40vh;
    width: 100%;
    background:linear-gradient(to left bottom,#b4f502,#92c605);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 150px;
    padding: 0 100px;
}
#footer>img{
    position: absolute;
    left: 0;
    height: 40%;
    z-index: 0;
}
#scroller{
    
    white-space: nowrap;
    overflow-x: auto;
    overflow-y: hidden;
    position: relative;
    z-index: 10;

}
#scroller::-webkit-scrollbar{
    display: none;

}
#scroller-in{
    display: inline-block;
    white-space: nowrap;
}
#scroller-in{
    display: inline-block;
    white-space: nowrap;
    animation-name: scroll;
    animation-duration: 15s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
}
#scroller h4{
    display: inline-block;
    font-size: 140px;
    font-weight: 800;
    font-family: gilroy;
    margin-right: 10px;
    transition: all linear 0.5s;
    color: transparent;
    -webkit-text-stroke: 2px #95C11E;
}
#scroller h4:hover{
    color: #95C11E;
}
@keyframes scroll{
    from{
        transform: translateX(0);
    }
    to{
        transform: translateX(-100%);
    }
}
a{
text-decoration: none;
}
